    <!-- <ContentPresenter Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0 10" Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type controls:BotInstanceControl}}, Path=BotInstance.Solver}"/> -->
