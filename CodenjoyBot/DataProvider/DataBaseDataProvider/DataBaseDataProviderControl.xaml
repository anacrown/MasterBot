<UserControl x:Class="CodenjoyBot.DataProvider.DataBaseDataProvider.DataBaseDataProviderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dataBaseDataProvider="clr-namespace:CodenjoyBot.DataProvider.DataBaseDataProvider">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" VerticalContentAlignment="Center" Content="Instance name"/>
            <TextBlock x:Name="ServerUriTextBox" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Margin="10 10 0 10" HorizontalAlignment="Stretch" />

            <Button x:Name="SelectInstance" Grid.Column="3" Content=". . ." VerticalAlignment="Center" Margin="0 10 10 10" Width="30"
                    Click="SelectInstance_OnClick"/>

        </Grid>
    </Grid>
</UserControl>
