<UserControl x:Class="BomberMan_SuperAI.BomberSolverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BomberMan_SuperAI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="792"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <Canvas x:Name="Canvas" Grid.Column="0" Margin="3"/>
        
        <TextBlock x:Name="LogTextBlock" Grid.Column="1" Margin="3"/>
    </Grid>
</UserControl>
